<div class='user-page container'>

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, class:"form-control"%>
    </div>
    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group">
      <%= f.label :password %> <br />
      <%# <%= f.label :password %>
      <%# <i>(leave blank if you don't want to change it)</i><br /> %>
      <%# <%= f.password_field :password, autocomplete: "new-password" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを変更しない場合は何も入力しないでください", class:"form-control" %>
      <% if @minimum_password_length %>
        <br />
        <%# <em><%= @minimum_password_length %>
        <%# characters minimum</em> %>
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%# <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを変更しない場合は何も入力しないでください", class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password %> <br />
      <%# <i>(we need your current password to confirm your changes)</i><br /> %>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "パスワードを変更する場合は現在のパスワードも入力してください", class:"form-control" %>
    </div>

    <div class="actions", style="text-align: center;">
      <%= f.submit "アカウントを更新する", class:'btn btn-success btn-lg' %>
    </div>
    <br>
  <div class="actions", style="text-align: center;">
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete, class:'btn btn-danger btn-lg' %>
  </div>
  <% end %>
</div>

