<div class='user-page container'>
  <h2>ユーザ新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autofocus: true, placeholder: "全半角10文字以内", maxlength: "10",  class:"form-control" %>
      <%# <%= f.label :nickname %>
      <%# <em>(20 characters maximum)</em><br /> %>
      <%# <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
    </div>
    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例：sample@email.com", class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <%# <em>(<%= @minimum_password_length %>
      <%# characters minimum)</em> %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数8文字以上",  class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードをもう一度入力してください", class:"form-control" %>
    </div>

    <div class="actions", style="text-align: center;">
      <%= f.submit "新規登録", class:'btn btn-info btn-lg'%>
    </div>
  <% end %>
</div>
<div class='devise-links', style="text-align: center;">
  <%= render "devise/shared/links" %>
</div>

